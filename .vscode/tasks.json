{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install deps",
      "type": "shell",
      "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe -m pip install -r requirements.txt",
      "problemMatcher": []
    },
    {
      "label": "Run app",
      "type": "shell",
      "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe -m streamlit run app.py --server.port 8502",
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "Freeze reqs",
      "type": "shell",
      "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe -m pip freeze > requirements.txt",
      "problemMatcher": []
    }
  ]
}
